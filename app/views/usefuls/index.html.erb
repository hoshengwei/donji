<p id="notice"><%= notice %></p>

<h1>Usefuls</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Catalog</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usefuls.each do |useful| %>
      <tr>
        <td><%= useful.name %></td>
        <td><%= useful.catalog %></td>
        <td><%= link_to 'Show', useful %></td>
        <td><%= link_to 'Edit', edit_useful_path(useful) %></td>
        <td><%= link_to 'Destroy', useful, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Useful', new_useful_path %>
