<h2 class="Display-4 text-center">新增海域巡查紀錄</h2>
<hr>
<%= simple_form_for(@ocean_inspect) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date, label: '巡查日期' %>
    <%= f.input :s_time, label: '出航時間' %>
    <%= f.input :e_time, label: '返航時間' %>
    <%= f.input :boat_id, collection: Boat.all, label: '使用船隻'%>
    <%= f.input :captain, collection: Staff.where("role ='船公司'"), label: '船長'%>
    <%= f.input :leader, collection: Staff.where("role ='國家公園'"), label: '領隊'%>
    <%= f.input :location %>
    <%= f.input :crew %>
    <%= f.input :gas %>
    <%= f.input :oil %>
    <%= f.input :distance %>
    <%= f.input :diary %>
    <%= f.input :work_items %>
    <%= f.input :note %>
    <%= f.input :year %>
    <%= f.input :month %>
    <%= f.input :day %>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


